doctype html
html( ng-app="TMApp" lang="en" class="no-js" )
  head
    meta(charset="utf-8")
    meta( name="viewport", content="width=device-width, initial-scale=1.0")
    title(ng-bind="title")

    block scripts
      script(src='/javascripts/modernizr.js')
      script(src='/javascripts/angular.js')
      script(src='/javascripts/angular-route.js')
      script(src='/javascripts/angular-resource.js')
      script(src='/javascripts/angular-messages.js')
      script(src='/javascripts/stripe-angular.js')
      script(src='/javascripts/jquery.js')
      script(src='/jquery-ui-1.11.4.custom/jquery-ui.js')
      script(src='/javascripts/jquery-ui-sliderAccess.js')
      script(src='/javascripts/jquery-ui-timepicker-addon.js')
      script(src='/javascripts/foundation.js')
      script(src='/javascripts/foundation.alert.js')
      script(src='/javascripts/foundation.joyride.js')
      script(src='/javascripts/angular-local-storage.js')
      script(src='/javascripts/card.js')
      script(src='/javascripts/client.js')
      script(src='/javascripts/tm-service.js')
      script(src='/javascripts/tm-ctrl.js')
      script(src='/javascripts/tm-filters.js')
      script(src='https://js.stripe.com/v2/')

    block stylesheets
      link(rel='stylesheet', href='/stylesheets/normalize.css')
      link(rel='stylesheet', href='/stylesheets/foundation.css')
      link(rel='stylesheet', href='/stylesheets/default.css')
      link(rel='stylesheet', href='/jquery-ui-1.11.4.custom/jquery-ui.css')
      link(rel='stylesheet', href='/stylesheets/jquery-ui-timepicker-addon.css')
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/stylesheets/homepage.css')


    base(href="/#/")
  body(ng-class='bodyClass')
    include navigation

    div(class="wrapper")
      block content
    script.
      jQuery(document).foundation();
